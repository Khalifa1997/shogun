File traindat = csv_file("@SHOGUN_DATA@/classifier_4class_2d_linear_features_train.dat")
File label_traindat = csv_file("@SHOGUN_DATA@/classifier_4class_2d_linear_labels_train.dat")

#![create_features]
Features feats_train = features(traindat)
Labels ground_truth_labels = labels(label_traindat)
#![create_features]

#![create_classifier]
Machine svm= machine("MulticlassLibLinear", C=1.0, labels=ground_truth_labels, seed=1)
Parallel p = svm.get_global_parallel()
p.set_num_threads(1)
#![create_classifier]

#![train_and_apply]
svm.train(feats_train)
Labels predicted_labels = svm.apply()
RealVector labels = predicted_labels.get_real_vector("labels")
#![train_and_apply]

#![evaluate_accuracy]
Evaluation binary_evaluator = evaluation("ROCEvaluation")
Evaluation ROCEvaluator = evaluation("MulticlassOVREvaluation", binary_evaluation=binary_evaluator)
real mean_roc = ROCEvaluator.evaluate(predicted_labels,ground_truth_labels)

Evaluation binary_evaluator2 = evaluation("ContingencyTableEvaluation", type="ACCURACY")
Evaluation ContingencyTableEvaluator = evaluation("MulticlassOVREvaluation", binary_evaluation=binary_evaluator)
real mean_accuracy = ContingencyTableEvaluator.evaluate(predicted_labels,ground_truth_labels)
#![evaluate_accuracy]
